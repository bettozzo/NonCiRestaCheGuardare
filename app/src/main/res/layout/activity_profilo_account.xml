<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context="unitn.app.activities.profilo.ProfiloAccount">

    <LinearLayout
        android:id="@+id/containerPiattaforme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Seleziona le tue piattaforme" />

        <CheckBox
            android:id="@+id/netflixBox"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Netflix" />

        <CheckBox
            android:id="@+id/amazonPrimeBox"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Amazon Prime" />

        <CheckBox
            android:id="@+id/raiPlayBox"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Rai Play" />


        <CheckBox
            android:id="@+id/disneyPlusBox"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Disney Plus" />


        <CheckBox
            android:id="@+id/crunchyrollBox"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Crunchyroll" />

    </LinearLayout>


    <TextView
        android:id="@+id/header"
        android:layout_below="@id/containerPiattaforme"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Modifica username" />

    <EditText
        android:id="@+id/username"
        style="@style/normalText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="name"
        android:inputType="textNoSuggestions"
        android:lines="1"
        android:text="Username"
        tools:ignore="LabelFor" />


    <Button
        android:id="@+id/btnSaveUsername"
        style="@style/normalButton"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Esci dall'account"
        android:text="Salva" />

</RelativeLayout>