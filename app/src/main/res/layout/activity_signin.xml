<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unitn.app.Login">

    <TextView
        android:id="@+id/titoloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:breakStrategy="simple"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Registrazione"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="250dp"
        android:hint="Username"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Non Ã¨ richiesta una password!"
        android:textColor="#B3818181"
        android:textSize="16sp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:layout_below="@+id/username"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="130dp"
        android:backgroundTint="#008c00"
        android:text="Registrati"
        android:textSize="20sp" />
</RelativeLayout>