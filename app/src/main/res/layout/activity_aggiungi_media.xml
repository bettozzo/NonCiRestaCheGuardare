<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="unitn.app.AggiungiMedia">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="unitn.app.DettaglioMedia">

        <TextView
            android:id="@+id/titoloFilm"
            style="@style/HeaderTitolo"
            android:text="TitoloFilm" />
        <TextView
            android:id="@+id/isFilm"
            style="@style/normalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titoloFilm"
            android:text="Film o SerieTv " />
        <ImageView
            android:id="@+id/poster"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_below="@+id/isFilm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            tools:srcCompat="@drawable/missing_poster" />


        <LinearLayout
            android:id="@+id/LayoutInfoFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/poster">

            <TextView
                android:id="@+id/HeaderInfoMedia"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinossi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sinossiText"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:scrollbarFadeDuration="@integer/material_motion_duration_medium_2"
                android:scrollbars="vertical"
                android:text="@string/lorem_ipsum_1"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/credits"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/castText"
                style="@style/normalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:text="cast: x,x,x"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/crewText"
                style="@style/normalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:text="crew: x,x,x"
                android:textAlignment="textStart" />

        </LinearLayout>

        <Button
            android:id="@+id/addMedia"
            style="@style/normalButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/LayoutInfoFilm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Aggiungi" />


    </RelativeLayout>
</ScrollView>